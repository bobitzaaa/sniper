local Players = game:GetService('Players')
local ts = game:GetService("TeleportService")
local placeId = 15502339080  -- ID-ul jocului Plaza

-- Funcția care verifică numărul de jucători și inițiază teleportarea
local function checkAndJump()
    local numPlayers = #Players:GetPlayers()
    if numPlayers < 20 then
        ts:Teleport(placeId, Players.LocalPlayer)
    end
end

-- Verificăm numărul de jucători când unul părăsește jocul
Players.PlayerRemoving:Connect(function()
    checkAndJump()
end)

-- Verificăm numărul de jucători periodic
while wait(60) do  -- Așteptăm 60 de secunde între verificări
    checkAndJump()
end
